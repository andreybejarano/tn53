<%- include('partials/head', { title: 'Detalle' }) %>
  <body>
    <!-- Navbar (sit on top) -->
    <%- include('partials/nav')  %>

    <!-- Header -->
    <%- include('partials/header') %>

    <!-- Page content -->
    <div class="ps-content">

      <!-- Menu Section -->
      <div class="ps-row ps-padding-64" id="menu">
        <% if (locals.product) {%>
        <div class="ps-col l6 ps-padding-large">
          <h1 class="ps-center"><%= product.titulo %></h1>
          <br />
          <h4><%= product.descripcionDetallada %></h4>
          <p class="ps-text-grey">
            U$S <%= product.precio %>
          </p>
        </div>

        <div class="ps-col l6 ps-padding-large ps-img-menu">
          <img
            src="/images/<%= product.img %>"
            class="ps-round ps-image ps-opacity-min"
            alt="Menu"
          />
        </div>
        <% } else { %>
          <h4>Producto no encontrado</h4>
        <% } %>
      </div>

      <!-- Footer -->
      <%- include('partials/footer') %>
    </div>
  </body>
</html>
